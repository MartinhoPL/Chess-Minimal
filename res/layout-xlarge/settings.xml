<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#ff4b4a4a">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:minHeight="100dp"
            android:background="@android:color/background_dark">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:id="@+id/textView6" android:layout_gravity="center_horizontal" android:textSize="80dp"/>
    </LinearLayout>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Game Settings:"
                    android:id="@+id/textView7" android:layout_column="0" android:textSize="70dp"
                    android:layout_margin="30dp" android:textColor="@android:color/holo_purple"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Game mode:"
                    android:id="@+id/textView8" android:layout_column="0" android:textSize="50dp"
                    android:layout_margin="20dp" android:textColor="@android:color/background_dark"/>
            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner2" android:layout_column="1" android:spinnerMode="dropdown"
                    android:entries="@array/gameModeSpinnerItems"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time:"
                    android:id="@+id/hhh" android:layout_column="0" android:singleLine="false"
                    android:textSize="50dp" android:layout_margin="20dp"
                    android:textColor="@android:color/background_dark"/>
            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner" android:layout_column="1" android:entries="@array/timeSpinnerItems"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/mhvc">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 move draw:"
                    android:id="@+id/textView10" android:layout_column="0" android:textSize="50dp"
                    android:singleLine="false" android:layout_margin="20dp"
                    android:textColor="@android:color/background_dark"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox3" android:layout_column="1" android:minHeight="50dp"
                    android:minWidth="50dp" android:focusableInTouchMode="false" android:checked="true"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Castling:"
                    android:id="@+id/textView11" android:layout_column="0" android:textSize="50dp"
                    android:layout_margin="20dp" android:textColor="@android:color/background_dark"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox4" android:layout_column="1" android:checked="true"/>
        </TableRow>
    </TableLayout>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center_horizontal" android:layout_weight="1">
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Engine Settings"
                    android:id="@+id/textView12" android:layout_column="0"
                    android:textColor="@android:color/holo_purple" android:textSize="70dp"
                    android:layout_margin="30dp"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_margin="20dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show engine evaluation"
                    android:id="@+id/textView13" android:layout_column="0" android:textSize="50dp"
                    android:textColor="@android:color/background_dark"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox" android:layout_column="2" android:checked="true"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_margin="20dp" android:id="@+id/gcj">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Game tree depth"
                    android:id="@+id/textView14" android:layout_column="0" android:textSize="50dp"
                    android:textColor="@android:color/background_dark"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText" android:layout_column="2" android:text="8" android:textSize="50dp"
                    android:background="@android:color/background_light"
                    android:textColor="@android:color/background_dark" android:layout_span="80"/>
        </TableRow>
    </TableLayout>
</LinearLayout>