<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ff4b4a4a" android:weightSum="1" android:id="@+id/mainContainer">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:weightSum="1"
            android:background="@android:color/background_dark" android:id="@+id/menu" android:layout_weight="0.10">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="100dp"
                android:layout_height="match_parent" android:layout_weight="0.6" android:id="@+id/mainMenu">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Start"
                    android:id="@+id/startButton" android:layout_weight="0.5" android:textSize="30dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Settings"
                    android:id="@+id/settingsButton" android:layout_weight="0.5" android:textSize="30dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="match_parent" android:id="@+id/secondaryMenu" android:layout_weight="0.4">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/decisionMenu"
                    android:weightSum="1">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Resign"
                        android:id="@+id/resignButton" android:layout_weight="0.5" android:textSize="25dp"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Draw"
                        android:id="@+id/drawButton" android:layout_weight="0.5" android:textSize="25dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/undoRedoMenu">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Undo"
                        android:id="@+id/undoButton" android:layout_weight="0.3" android:textSize="25dp"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Redo"
                        android:id="@+id/redoButton" android:layout_weight="0.3" android:textSize="25dp"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Pause"
                        android:id="@+id/pauseButton" android:textSize="25dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="30dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="White Turn"
                android:id="@+id/textView" android:layout_gravity="center_horizontal" android:textSize="50dp"
                android:textIsSelectable="false"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0.55" android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView" android:layout_gravity="center_horizontal"
                android:src="@drawable/chess"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_weight="0.07" android:layout_marginTop="50dp" android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp" android:id="@+id/timeLayout">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="05:00"
                android:id="@+id/textView4" android:textSize="40dp" android:layout_marginLeft="100dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="05:00"
                android:id="@+id/textView5" android:textSize="40dp" android:layout_marginLeft="300dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp" android:weightSum="1" android:id="@+id/playerInfoLayout">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton" android:background="@android:color/background_light"
                android:minHeight="50dp" android:minWidth="50dp" android:layout_marginRight="20dp"
                android:layout_marginLeft="50dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Human"
                android:id="@+id/textView2" android:minHeight="50dp" android:textAlignment="center"
                android:layout_weight="0.08" android:elegantTextHeight="false" android:textSize="30dp"
                android:textIsSelectable="false"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="AI"
                android:id="@+id/textView3" android:layout_marginLeft="300dp" android:layout_marginRight="20dp"
                android:textSize="30dp" android:textIsSelectable="false"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2" android:minHeight="50dp" android:minWidth="50dp"
                android:background="@android:color/background_dark"/>
    </LinearLayout>
</LinearLayout>
