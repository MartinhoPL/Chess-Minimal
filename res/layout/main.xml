<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ff4b4a4a" android:weightSum="1" android:id="@+id/mainContainer">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:weightSum="1"
            android:background="@android:color/background_dark" android:id="@+id/menu" android:layout_weight="0.10">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="100dp"
                android:layout_height="match_parent" android:layout_weight="0.6" android:id="@+id/mainMenu">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Start"
                    android:id="@+id/startButton" android:layout_weight="0.5"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Settings"
                    android:id="@+id/settingsButton" android:layout_weight="0.5"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="match_parent" android:id="@+id/secondaryMenu" android:layout_weight="0.4">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/decisionMenu"
                    android:weightSum="1">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Resign"
                        android:id="@+id/resignButton" android:layout_weight="0.5"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Draw"
                        android:id="@+id/drawButton" android:layout_weight="0.5"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/undoRedoMenu">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Undo"
                        android:id="@+id/undoButton" android:layout_weight="0.3"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Redo"
                        android:id="@+id/redoButton" android:layout_weight="0.3"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Pause"
                        android:id="@+id/pauseButton"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0.17">
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0.55">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView" android:layout_gravity="center_horizontal"
                android:src="@drawable/chess"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0.20">
    </LinearLayout>
</LinearLayout>

